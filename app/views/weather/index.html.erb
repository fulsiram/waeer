<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-4">
  <div class="max-w-md mx-auto">
    <div class="text-center mb-6 pt-8">
      <h1 class="text-2xl font-light text-gray-800 mb-6 hover:text-blue-600 transition-colors duration-200 cursor-pointer"><a href="/">WAEER</a></h1>

      <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-1 mb-6 shadow-lg">
        <%= form_with url: "/", method: :get, local: true, class: "flex items-center" do |form| %>
          <div class="flex items-center flex-1 px-4 py-3">
            <i data-lucide="map-pin" class="w-4 h-4 text-gray-400 mr-3"></i>
            <%= form.text_field :location, 
                placeholder: "Search for a city...", 
                value: params[:location],
                class: "flex-1 bg-transparent outline-none text-gray-700 placeholder-gray-400 text-sm" %>
          </div>
          <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white rounded-xl p-3 m-1 transition-colors duration-200 cursor-pointer flex items-center justify-center" style="background-image: none;">
            <i data-lucide="Search" class="w-4 h-4"></i>
          </button>
        <% end %>
      </div>

      <% if @weather_data&.location %>
        <div class="flex items-center justify-center text-gray-600 text-sm">
          <i data-lucide="map-pin" class="w-4 h-4 mr-1"></i>
          <span><%= @weather_data.location.name %></span>
        </div>
      <% end %>
    </div>

    <% if flash[:alert] %>
      <div class="mb-6">
        <div class="bg-red-50/90 backdrop-blur-sm border border-red-200 rounded-2xl p-4 shadow-lg">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <i data-lucide="alert-triangle" class="w-5 h-5 text-red-500"></i>
            </div>
            <div class="ml-3">
              <p class="text-sm text-red-800 font-medium">
                <%= flash[:alert] %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if @weather_data&.current %>
      <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-8 mb-6 shadow-lg">
        <div class="text-center mb-6">
          <div class="flex justify-center mb-4">
            <i data-lucide="<%= get_weather_icon(@weather_data.current.condition) %>" class="w-16 h-16 text-gray-600"></i>
          </div>
          <div class="text-5xl font-thin text-gray-800 mb-2">
            <%= @weather_data.current.temperature.round %>°
          </div>>
          <p class="text-gray-600 text-lg"><%= @weather_data.current.condition&.humanize || 'Partly Cloudy' %></p>
        </div>

        <div class="grid grid-cols-3 gap-4 pt-6 border-t border-gray-200">
          <div class="text-center">
            <i data-lucide="droplets" class="w-5 h-5 text-blue-500 mx-auto mb-2"></i>
            <p class="text-xs text-gray-500 mb-1">Humidity</p>
            <p class="text-sm font-medium text-gray-800"><%= @weather_data.current.humidity %>%</p>
          </div>
          <div class="text-center">
            <i data-lucide="gauge" class="w-5 h-5 text-green-500 mx-auto mb-2"></i>
            <p class="text-xs text-gray-500 mb-1">Pressure</p>
            <p class="text-sm font-medium text-gray-800"><%= @weather_data.current.pressure %> hPa</p>
          </div>
          <div class="text-center">
            <i data-lucide="wind" class="w-5 h-5 text-purple-500 mx-auto mb-2"></i>
            <p class="text-xs text-gray-500 mb-1">Wind</p>
            <p class="text-sm font-medium text-gray-800"><%= format_wind(@weather_data.current.wind_speed, @weather_data.current.wind_direction) %></p>
          </div>
        </div>
      </div>
    <% else %>
      <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-12 mb-6 shadow-lg">
        <div class="text-center">
          <div class="flex justify-center mb-6">
            <div class="bg-blue-50 rounded-full p-6">
              <i data-lucide="search" class="w-12 h-12 text-blue-500"></i>
            </div>
          </div>
          <h2 class="text-xl font-light text-gray-800 mb-3">
            Welcome to WAEER
          </h2>
          <p class="text-gray-600 text-sm leading-relaxed mb-6">
            Search for any city or location to get detailed weather information including current conditions and a 5-day forecast.
          </p>
          <div class="flex justify-center">
            <div class="bg-gray-50 rounded-2xl px-6 py-3">
              <p class="text-xs text-gray-500">
                Try searching for "New York", "London", or "Tokyo"
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if @weather_data&.forecast&.any? %>
      <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-6 shadow-lg">
        <h2 class="text-lg font-medium text-gray-800 mb-4">5-Day Forecast</h2>
        
        <div class="space-y-3">
          <% @weather_data.forecast.each_with_index do |day, index| %>
            <div class="flex items-center justify-between py-2">
              <div class="flex items-center space-x-3">
                <i data-lucide="<%= get_weather_icon(day.condition) %>" class="w-8 h-8 <%= get_weather_icon_color(day.condition) %>"></i>
                <span class="text-gray-700 font-medium min-w-20">
                  <%= index == 0 ? 'Today' : day.date.strftime('%A') %>
                </span>
              </div>
              
              <div class="flex items-center space-x-3">
                <span class="text-gray-600 text-sm">
                  <%= day.min_temperature.round %>°
                </span>
                <div class="w-16 bg-gray-200 rounded-full h-1">
                  <div class="bg-gradient-to-r from-blue-400 to-orange-400 h-1 rounded-full" 
                       style="width: <%= temperature_bar_width(day.min_temperature, day.max_temperature, @weather_data.forecast) %>%;"></div>
                </div>
                <span class="text-gray-800 font-medium text-sm">
                  <%= day.max_temperature.round %>°
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @weather_data&.updated_at %>
      <div class="text-center mt-8 mb-4">
        <div class="flex justify-center mb-2">
          <% if @weather_data.from_cache %>
            <span class="inline-flex items-center px-2 py-1 bg-green-100 text-green-700 rounded-full text-xs">
              <i data-lucide="database" class="w-3 h-3 mr-1"></i>
              Cached
            </span>
          <% else %>
            <span class="inline-flex items-center px-2 py-1 bg-blue-100 text-blue-700 rounded-full text-xs">
              <i data-lucide="refresh-cw" class="w-3 h-3 mr-1"></i>
              Live
            </span>
          <% end %>
        </div>
        <p class="text-xs text-gray-500">
          Last updated: <%= @weather_data.updated_at.strftime('%I:%M %p') %>
        </p>
      </div>
    <% end %>
  </div>
</div>

<script src="https://unpkg.com/lucide@latest"></script>
<script>
  lucide.createIcons();
</script>

